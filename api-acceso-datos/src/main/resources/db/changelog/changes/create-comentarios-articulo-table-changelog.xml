<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="admin" id="1">
        <createTable tableName="comentario_articulo">
            <column name="id" type="INT" >
                <constraints primaryKey="true"/>
            </column>
            <column name="tipo_comentario" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="id_usuario" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="id_articulo" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="comentario" type="clob">
                <constraints nullable="false"/>
            </column>
            <column name="respuesta_comentario" type="clob">
            </column>
            <column name="historico" type="clob">
            </column>
            <column name="id_llave" type="INT" >
            </column>
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="comentario"/>
        </rollback>
    </changeSet>
    <changeSet id="2" author="admin">
        <createSequence sequenceName="comentario_art_seq" startValue="1" incrementBy="1" />
    </changeSet>
</databaseChangeLog>