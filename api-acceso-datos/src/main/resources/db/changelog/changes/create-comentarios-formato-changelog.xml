<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="admin" id="1">
        <createTable tableName="comentario_formato_articulo">
            <column name="id" type="INT" >
                <constraints primaryKey="true"/>
            </column>
            <column name="tipo_comentario" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="id_usuario" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="id_formato" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="comentario" type="VARCHAR(255)"/>
            <column name="respuesta_alumno" type="VARCHAR(255)"/>
            <column name="ubicacion" type="VARCHAR(255)"/>
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="comentario_formato_articulo"/>
        </rollback>
    </changeSet>
    <changeSet id="2" author="admin">
        <createSequence sequenceName="comentario_formato_articulo_seq" startValue="1" incrementBy="1" />
    </changeSet>
    <changeSet id="3" author="admin">
        <addForeignKeyConstraint baseTableName="comentario_formato_articulo" baseColumnNames="id_formato" constraintName="fk_comentario_formato_articulo" referencedTableName="formato"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>