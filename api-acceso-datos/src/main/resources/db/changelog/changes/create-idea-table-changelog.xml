<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="admin" id="1">
        <createTable tableName="idea">
            <column name="id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="id_usuario" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="id_profesor" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="contenido" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="estado" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="titulo" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="id_prof_autoriza" type="INT">
            </column>

            <column name="id_prof_jurado" type="INT">
            </column>

            <column name="fecha_aprob" type="datetime">
            </column>
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="idea"/>
        </rollback>
    </changeSet>
    <changeSet id="2" author="admin">
        <createSequence sequenceName="idea_seq" startValue="1" incrementBy="1" />
    </changeSet>
</databaseChangeLog>